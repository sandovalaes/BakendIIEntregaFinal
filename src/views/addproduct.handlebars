<div class="section">
    <div class="container mt-5">
        <a href="http://localhost:8081/products" class="btn btn-info">Volver al inicio</a>
        <h1>Alta de Producto</h1>
        <div class="container min-vh-75 d-flex justify-content-center align-items-center">
            <div>
                <form class="" id="formProduct">
                    <div class="container">
                        <div class="justify-content-md-center">
                            <!-- Nombre del Producto -->
                            <div class="col-md-auto">
                                <label for="title" class="form-label">Título</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-box"></i></span>
                                    <input class="form-control" type="text" name="title" id="title"
                                        placeholder="Ej. Juego de llaves" required>
                                </div>
                            </div>

                            <!-- Descripción -->
                            <div class="col-md-auto">
                                <label for="description" class="form-label">Descripción</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-file-text"></i></span>
                                    <input class="form-control" type="text" name="description" id="description"
                                        placeholder="Ej. kit completo de llaves" required>
                                </div>
                            </div>


                            <!-- Precio -->
                            <div class="col-md-auto">
                                <label for="price" class="form-label">Precio</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                    <input class="form-control" type="number" name="price" id="price"
                                        placeholder="Ej. 1000" required>
                                </div>
                            </div>

                            <!-- Estado (Checkbox) -->
                            <div class="col-md-auto">
                                <div class="form-check mt-4">
                                    <input name="status" class="form-check-input" type="checkbox" value="true"
                                        id="flexCheckChecked" checked>
                                    <label class="form-check-label" for="flexCheckChecked">Estado</label>
                                </div>
                            </div>

                            <!-- Código -->
                            <div class="col-md-auto">
                                <label for="code" class="form-label">Código</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                    <input class="form-control" type="text" name="code" id="code"
                                        placeholder="Ej. ABC123" required>
                                </div>
                            </div>

                            <!-- Stock -->
                            <div class="col-md-auto">
                                <label for="stock" class="form-label">Stock</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-box"></i></span>
                                    <input class="form-control" type="number" name="stock" id="stock"
                                        placeholder="Ej. 20" required>
                                </div>
                            </div>

                            <!-- Imagen (URL) -->
                            <div class="col-md-auto">
                                <label for="thumbnail" class="form-label">Imagen (URL)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-image"></i></span>
                                    <input class="form-control" type="text" name="thumbnail" id="thumbnail"
                                        placeholder="Ej. https://ejemplo.com/image.jpg" required>
                                </div>
                            </div>

                            <!-- Categoría -->
                            <div class="col-md-auto">
                                <label for="category" class="form-label">Categoría</label>
                                <div class="input-group">
                                    <select name="category" class="form-control" id="category">
                                        {{#each miscategorias}}
                                        <option value="{{this.category}}" {{#if this.selected }} selected {{/if}}>
                                            {{this.category}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>


                            <!-- Botón Registrar -->
                            <div class="col-12 mt-4">
                                <button class="btn btn-info" type="submit" id="add-btn">Registrar </button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>